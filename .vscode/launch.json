    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to android on device|emulator",
            "type": "cordova",
            "request": "attach",
            "platform": "android",
            "target": "emulator",
            "port": 5444,
            "cwd": "${workspaceFolder}",
            "sourceMaps": true
        },
        {
            "type": "android",
            "name": "Android",
            "request": "launch",
            "appSrcRoot": "${workspaceRoot}/app/src/main",
            "apkFile": "${workspaceRoot}/app/build/outputs/apk/debug/app-debug.apk",
            "adbPort": 5556
        }
    ]
}